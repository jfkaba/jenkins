pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
               sh "mvn clean install"
            }
        stage('Test') { 
            steps {
               sh "echo Test"
            }
        }
        stage('Post Build') { 
            archiveArtifacts artifacts: '*/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
deploy adapters: [tomcat9(credentialsId: 'jenkins3', path: '', url: 'http://localhost:8080')], contextPath: '/spark', war: '*/*.war'        }
    }
}