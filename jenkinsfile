pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
               sh "mvn clean install"
            }
        stage('Test') { 
            steps {
               sh "echo Test"
            }
        }
        stage('Post Build') { 
            archiveArtifacts artifacts: '*/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
                deploy adapters: [tomcat9(credentialsId: '7eda10f8-d418-43d3-b571-24dd595e6141', path: '', url: '')], contextPath: '/spark', war: 'target/*.war' 
            }
        }
    }
}